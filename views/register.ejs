<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 450px;
            padding: 40px;
        }
        h1 { font-size: 28px; margin-bottom: 8px; color: #333; }
        p { color: #666; font-size: 14px; margin-bottom: 30px; }

        label { display: block; margin-bottom: 6px; color: #333; font-size: 14px; font-weight: 500; }
        input[type="text"], input[type="email"], input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            margin-bottom: 20px;
            transition: border-color 0.3s;
        }
        input:focus { outline: none; border-color: #333; }
        .strength {
            height: 3px;
            background: #ddd;
            border-radius: 2px;
            margin: -15px 0 20px;
            overflow: hidden;
            display: none;
        }
        .strength div { height: 100%; width: 0; transition: all 0.3s; }
        .strength.weak div { width: 33%; background: #ff4757; }
        .strength.medium div { width: 66%; background: #ffa502; }
        .strength.strong div { width: 100%; background: #26de81; }
        .check { display: flex; align-items: flex-start; margin-bottom: 20px; }
        .check input { width: auto; margin: 3px 10px 0 0; }
        .check label { font-weight: normal; font-size: 13px; color: #666; }
        .check a { color: #333; }
        .btn {
            width: 100%;
            padding: 12px;
            background: #333;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.3s;
        }
        .btn:hover { background: #000; }
        .divider {
            text-align: center;
            margin: 25px 0;
            color: #999;
            font-size: 13px;
            position: relative;
        }
        .divider::before, .divider::after {
            content: '';
            position: absolute;
            top: 50%;
            width: 45%;
            height: 1px;
            background: #ddd;
        }
        .divider::before { left: 0; }
        .divider::after { right: 0; }
        .social { display: flex; gap: 10px; margin-bottom: 25px; }
        .social button {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }
        .social button:hover { border-color: #333; background: #f9f9f9; }
        .link { text-align: center; color: #666; font-size: 14px; }
        .link a { color: #333; text-decoration: none; font-weight: 600; }
        .link a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Create Account</h1>
        <p>Sign up to get started</p>
        
        <label for="name">Full Name</label>
        <input type="text" id="name" placeholder="John Doe">
        
        <label for="email">Email</label>
        <input type="email" id="email" placeholder="john@example.com">
        
        <label for="pass">Password</label>
        <input type="password" id="pass" placeholder="Create a strong password" oninput="checkStrength()">
        <div class="strength" id="str"><div></div></div>
        
        <label for="conf">Confirm Password</label>
        <input type="password" id="conf" placeholder="Re-enter your password">
        
        <button class="btn" onclick="register()">Create Account</button>
        
        <div class="divider">OR</div>
        
        <div class="link">Already have an account? <a href="login.html">Sign In</a></div>
    </div>

    <script>
        function checkStrength() {
            const p = document.getElementById('pass').value;
            const s = document.getElementById('str');
            if (!p.length) { s.style.display = 'none'; return; }
            s.style.display = 'block';
            let str = (p.length >= 8) + (/[a-z]/.test(p) && /[A-Z]/.test(p)) + /\d/.test(p) + /[^a-zA-Z\d]/.test(p);
            s.className = 'strength ' + (str <= 2 ? 'weak' : str === 3 ? 'medium' : 'strong');
        }
        
        function register() {
            const n = document.getElementById('name').value;
            const e = document.getElementById('email').value;
            const p = document.getElementById('pass').value;
            const c = document.getElementById('conf').value;

            if (!n || !e || !p || !c) 
                return alert('Fill all fields');

            if (!e.endsWith("@gmail.com")) 
                return alert("Email must end with @gmail.com");

            if (p.length < 6) 
                return alert("Password must be at least 6 characters long");

            if (p !== c) 
                return alert('Passwords do not match');



            alert('Registration successful!');
        }

    </script>
</body>
</html>